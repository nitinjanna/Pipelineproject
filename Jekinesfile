pipeline
{
    agent any 
    stages
    {
        stage("count_download")
        {
            steps
            {
                git branch: 'main', url: 'https://github.com/nitinjanna/Pipelineproject.git'
            }
        }
         stage("count_Build")
        {
            steps
            {
                sh 'mvn package'
            }
        }
    }
    post
    {
        failure 
        mail bcc: '', body: 'Build falled to package', cc: '', from: '', replyTo: '', subject: 'Build fail', to: 'nitinjanna19@gmail.com'    
    }
}